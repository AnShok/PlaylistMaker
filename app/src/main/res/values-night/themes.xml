<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:statusBarColor">@color/YP_Black</item>
        <item name="android:switchStyle">@color/YP_Black</item>
        <item name="colorPrimary">@color/YP_Black</item>
        <item name="colorPrimaryDark">@color/YP_Black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/YP_Black</item>
        <item name="background">@color/YP_Black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorOnSecondary">@color/YP_White</item>
        <item name="colorControlActivated">@color/YP_Blue</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="android:textColorPrimary">@color/YP_White</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>