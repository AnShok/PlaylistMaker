<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Блок стилей активити -->
        <!-- Общие атрибуты для MainActivityStyle и ActivityStyle -->
            <style name="BaseActivityStyle">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">match_parent</item>
                <item name="android:orientation">vertical</item>
            </style>

        <!-- ActivityStyle -->
            <style name="ActivityStyle" parent="BaseActivityStyle">
                <item name="android:background">@color/YP_White</item>
            </style>

        <!-- FragmentStyleColor -->
            <style name="FragmentStyleColor">
                <item name="android:background">@color/YP_White</item>
            </style>
    <!-- Конец блока стилей активити -->

    <!-- Блок кнопки -->
        <!-- Общий стиль для кнопок главного экрана  -->
            <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
                <item name="android:backgroundTint">@color/YP_White</item>
                <item name="android:foreground">?attr/selectableItemBackground</item>
                <item name="android:textColor">@color/YP_Black</item>
                <item name="android:textSize">@dimen/main_menu_button_text_size</item>
                <item name="android:fontFamily">@font/ys_display_medium</item>
                <item name="android:textStyle">bold</item>
                <item name="android:textAllCaps">false</item>
                <item name="iconGravity">textStart</item>
                <item name="iconTint">@color/YP_Black</item>
                <item name="cornerRadius">@dimen/corner_radius_16</item>
            </style>

        <!-- Общий стиль для кнопоки refreshButton  -->
            <style name="RefreshOrClearButtonStyle">
                <item name="android:backgroundTint">@color/YP_Black</item>
                <item name="android:foreground">?attr/selectableItemBackground</item>
                <item name="android:textColor">@color/YP_White</item>
                <item name="android:textSize">@dimen/string_text_size_14</item>
                <item name="android:fontFamily">@font/ys_display_medium</item>
                <item name="cornerRadius">@dimen/corner_radius_54</item>
                <item name="android:textAllCaps">false</item>
            </style>

        <!-- Общий стиль для кнопки "Назад" -->
            <style name="BackButtonStyle">
                <item name="android:layout_width">@dimen/back_button_size</item>
                <item name="android:layout_height">@dimen/back_button_size</item>
                <item name="android:background">?android:attr/selectableItemBackground</item>
                <item name="icon">@drawable/ic_back</item>
                <item name="iconGravity">textStart</item>
                <item name="iconTint">@color/YP_Black</item>
            </style>

    <!-- Конец блока кнокпи -->

    <!-- Блок стилей текстов -->
        <!-- Общий стиль для текста -->
        <style name="TextStyleRegular">
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
        </style>

        <style name="TextStyleInformationTrack" parent="TextStyleRegular">
            <item name="android:textColor">@color/YP_Gray</item>
        </style>

        <style name="TextStyleInformationTrackReal" parent="TextStyleRegular">
            <item name="android:textColor">@color/YP_Black</item>
        </style>

        <!-- Общий стиль для текста подписи (автор и длительность) -->
        <style name="TextStyleArtistAndTime" parent="TextStyleRegular">
            <item name="android:textColor">@color/YP_Gray</item>
        </style>

        <!-- Общий стиль для текста Medium -->
        <style name="TextStyleMedium">
            <item name="android:textColor">@color/YP_Black</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
        </style>

    <!-- Конец блока стилей текстов -->

    <!-- Общий стиль для иконок -->
    <style name="IcStyle">
        <item name="android:layout_width">@dimen/settings_icons_size</item>
        <item name="android:layout_height">@dimen/settings_icons_size</item>
        <item name="tint">@color/YP_Gray</item>
    </style>

    <!-- Стиль поисковой строки (контейнер) -->
    <style name="SearchInputContainerStyle">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/YP_Light_gray</item>
    </style>

        <!-- Общий стиль для иконки поиска и очистки (поисковой строки) -->
        <style name="SearchClearIconStyle">
            <item name="android:layout_width">@dimen/search_icons_size</item>
            <item name="android:layout_height">@dimen/search_icons_size</item>
            <item name="android:layout_gravity">center</item>
        </style>

        <!-- Общий стиль для иконки поиска -->
        <style name="SearchIconStyle" parent="SearchClearIconStyle">
            <item name="tint">@color/YP_Gray</item>
            <item name="android:layout_marginStart">@dimen/indent_12</item>
            <item name="android:layout_marginEnd">@dimen/indent_8</item>
        </style>

        <!-- Общий стиль для иконки "Очистить" в поле поиска -->
        <style name="ClearIconStyle" parent="SearchClearIconStyle">
            <item name="android:src">@drawable/ic_clear</item>
            <item name="android:layout_marginEnd">@dimen/indent_12</item>
            <item name="tint">@color/YP_Gray</item>
        </style>

        <!-- Стиль поисковой строки -->
        <style name="SearchInputEditTextStyle">
            <item name="android:background">@drawable/rounded_corners</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorHint">@color/YP_Gray</item>
            <item name="android:textSize">@dimen/string_text_size_16</item>
            <item name="android:maxLength">20</item>
            <item name="android:maxLines">1</item>
            <item name="android:hint">@string/text_search</item>
        </style>

    <!-- Конец стиль поисковой строки (контейнер) -->

    <!-- Блок картинок/изображений -->
        <!-- Стиль изображений треков маленький -->
        <style name="SmallImageTrack">
            <item name="android:layout_width">@dimen/small_image_width</item>
            <item name="android:layout_height">@dimen/small_image_height</item>
            <item name="android:scaleType">centerCrop</item>
        </style>
    <!-- Конец блока -->

    <!-- Блок recycler_view -->
        <!-- Стиль для recycler_view -->
        <style name="StyleRecyclerView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">@dimen/rv_margin_top</item>
        </style>
    <!-- Конец блока -->

    <!-- Блок TabLayout -->
    <style name="TabLayoutStyle">
        <item name="tabTextColor">@color/YP_Black</item>
        <item name="tabIndicatorColor">@color/YP_Black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Конец блока -->

    <style name="bottomViewStyle">
        <item name="android:background">@color/YP_Black</item>
    </style>

    <style name="bottomNavStyle">
        <item name="backgroundTint">@color/YP_White</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_state</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_state</item>
    </style>

    <style name="textLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/box_stroke</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль для theme_switcher -->
    <style name="ThemeSwitcherStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль для fragment_create_playlist -->

    <style name="new_playlist_background">
        <item name="android:backgroundTint">@color/YP_White</item>
    </style>

    <style name="playerstyle">
        <item name="android:background">@color/YP_White</item>
    </style>

    <style name="main">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/YP_Black</item>
    </style>

    <style name="settingsbuttonstyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/YP_Gray</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="toolbaraudio" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="new_playlist_image_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Стиль для fragment_audioplayer -->
    <style name="bottom_sheet_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/YP_White</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginTop">24dp</item>
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottom_sheet_background">
        <item name="android:backgroundTint">@color/YP_White</item>
    </style>

    <style name="bottom_sheet_line_style">
        <item name="android:backgroundTint">@color/YP_Gray</item>
    </style>

    <!-- Стиль для NewPlaylistFragment-showDialog -->
    <style name="custom_alert_dialog_theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/YP_White</item>
        <item name="materialAlertDialogTitleTextStyle">@style/custom_title_text_style</item>
        <item name="materialAlertDialogBodyTextStyle">@style/custom_dialog_body_text_style</item>
        <item name="buttonBarPositiveButtonStyle">@style/pos_button_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/neg_button_style</item>
    </style>

    <style name="custom_title_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="custom_dialog_body_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Стиль для buttonBarPositiveButtonStyle -->
    <style name="pos_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/YP_Blue</item>
        <item name="android:backgroundTint">@color/YP_White</item>
    </style>

    <!-- Стиль для buttonBarNegativeButtonStyle -->
    <style name="neg_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/YP_Blue</item>
        <item name="android:backgroundTint">@color/YP_White</item>
    </style>

    <!-- Стиль для current_playlist -->
    <style name="toolbar_current_playlist" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="title_current_playlist">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="description_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="no_tracks_in_playlist">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>

