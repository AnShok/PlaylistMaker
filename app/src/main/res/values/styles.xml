<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Блок стилей активити -->
        <!-- Общие атрибуты для MainActivityStyle и ActivityStyle -->
        <style name="BaseActivityStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:orientation">vertical</item>
            <item name="android:padding">@dimen/activity_padding</item>
        </style>

        <!-- MainActivityStyle -->
        <style name="MainActivityStyle" parent="BaseActivityStyle">
            <item name="android:background">@color/blue</item>
        </style>

        <!-- ActivityStyle -->
        <style name="ActivityStyle" parent="BaseActivityStyle">
            <item name="android:background">@color/YP_White</item>
        </style>
    <!-- Конец блока стилей активити -->

    <!-- Общий стиль для кнопок главного экрана  -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/YP_White</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <!-- Блок стилей текстов -->
        <!-- Общий стиль для текста -->
        <style name="TextStyle">
            <item name="android:textSize">@dimen/string_text_size_16</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textFontWeight">400</item>
        </style>

        <style name="TextStyleTrackName" parent="TextStyle">
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Общий стиль для текста подписи (автор и длительность) -->
        <style name="TextStyleArtist" parent="TextStyle">
            <item name="android:textColor">@color/YP_Text_Gray</item>
            <item name="android:textSize">@dimen/string_text_size_11</item>
        </style>

        <!-- Общий стиль для текста названия экрана -->
        <style name="TopTextStyle">
            <item name="android:textColor">@color/YP_Black</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
            <item name="android:textSize">@dimen/titles_at_the_top</item>
        </style>
    <!-- Конец блока стилей текстов -->

    <!-- Общий стиль для иконок -->
    <style name="IcStyle">
        <item name="android:layout_width">@dimen/settings_icons_size</item>
        <item name="android:layout_height">@dimen/settings_icons_size</item>
        <item name="tint">@color/YP_Text_Gray</item>
    </style>

    <!-- Общий стиль для кнопки "Назад" -->
    <style name="BackButtonStyle">
        <item name="android:layout_width">@dimen/back_button_size</item>
        <item name="android:layout_height">@dimen/back_button_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="icon">@drawable/ic_back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
    </style>

    <!-- Стиль поисковой строки (контейнер) -->
    <style name="SearchInputContainerStyle">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

        <!-- Общий стиль для иконки поиска и очистки (поисковой строки) -->
        <style name="SearchClearIconStyle">
            <item name="android:layout_width">@dimen/search_icons_size</item>
            <item name="android:layout_height">@dimen/search_icons_size</item>
            <item name="android:layout_gravity">center</item>
        </style>

        <!-- Общий стиль для иконки поиска -->
        <style name="SearchIconStyle" parent="SearchClearIconStyle">
            <item name="tint">@color/YP_Text_Gray</item>
            <item name="android:layout_marginStart">12dp</item>
            <item name="android:layout_marginEnd">8dp</item>
        </style>

        <!-- Общий стиль для иконки "Очистить" в поле поиска -->
        <style name="ClearIconStyle" parent="SearchClearIconStyle">
            <item name="android:src">@drawable/ic_clear</item>
            <item name="android:layout_marginEnd">12dp</item>
            <item name="tint">@color/YP_Text_Gray</item>
        </style>

        <!-- Стиль поисковой строки -->
        <style name="SearchInputEditTextStyle">
            <item name="android:background">@drawable/rounded_corners</item>
            <item name="android:fontFamily">@font/ys_display_regular</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorHint">@color/YP_Text_Gray</item>
            <item name="android:textFontWeight">400</item>
            <item name="android:textSize">@dimen/string_text_size_16</item>
        </style>

    <!-- Конец стиль поисковой строки (контейнер) -->

    <!-- Блок картинок/изображений -->
        <!-- Стиль изображений треков маленький -->
        <style name="SmallImageTrack">
            <item name="android:layout_width">45dp</item>
            <item name="android:layout_height">45dp</item>
            <item name="android:scaleType">centerCrop</item>
        </style>
    <!-- Конец блока -->

</resources>

