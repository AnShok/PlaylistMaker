<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_blue"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/playlist_maker"
            android:textColor="@color/white"
            android:textSize="@dimen/titles_at_the_top" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/button_search"
            android:textColor="@color/black"
            android:textSize="@dimen/main_menu_button_text_size"
            android:backgroundTint="@color/white"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/ic_lupa"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black_ic_color"
            app:cornerRadius="16dp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/button_mediateka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/button_mediateka"
            android:textColor="@color/black"
            android:textSize="@dimen/main_menu_button_text_size"
            android:backgroundTint="@color/white"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/ic_mediateka"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black_ic_color"
            app:cornerRadius="16dp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="@string/setup_menu"
            android:textColor="@color/black"
            android:textSize="@dimen/main_menu_button_text_size"
            android:backgroundTint="@color/white"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black_ic_color"
            app:cornerRadius="16dp"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>


</LinearLayout>